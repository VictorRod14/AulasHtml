// contagem crescente de dois em dois
#include<iostream>
using namespace std;
int main(){
	int i;
		for (int i=2;i<=215; i+=2){
				cout<< i<< ",";

}
}


// contagem decrescente
#include<iostream>
using namespace std;
int main(){
	int i;
		for (int i=100;i>=0;i--){
				cout<< i<< ",";
		}

}

// Calculo Fatorial
#include<iostream>
using namespace std;
int main(){
	int num=0, fatorial=1;
	do{
	
	cout<< "Calculo do fatorial;"<<endl;
	cout<< "Digite um numero inteiro:";
	cin>> num;
	for (int i=1;i<=num;i++){
		fatorial= fatorial*i;
}

	cout<<"O fatorial do numero " <<num<<" eh "<<fatorial<<endl;
	cout<< "Deseja continuar? Digite zero para sair "<<endl;
	fatorial=1;
	}while (num!=0);
}
